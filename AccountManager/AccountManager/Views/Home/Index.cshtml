        <div class="col-lg-4">
            <h4>Информация о клане:</h4>
            @if (ViewBag.Clan == null)
            {
                <a href="../Clan/ClanCreate" class="btn btn-primary">Создать клан</a>
                <a href="../Clan/ClanList" class="btn btn-primary">Вступить в клан</a>
            }
            else
            {
                <table class="table">
                    <tbody>
                        <tr>
                            <th scope="row">Название:</th>
                            <td>@ViewBag.Clan.ClanName</td>
                        </tr>
                        <tr>
                            <th scope="row">Лидер:</th>
                            <td>@ViewBag.Clan.ClanLeader.Username</td>
                        </tr>
                        <tr>
                            <th scope="row">Участники:</th>
                            <td>@ViewBag.Clan.Followers.Count</td>
                            <td><a href="../Clan/ClanInfo?id=@ViewBag.Clan.ClanId" class="btn btn-primary">Подробнее</a></td>
                        </tr>
                        <tr>
                            @if (ViewBag.Player.Id == ViewBag.Clan.ClanLeader.Id)
                            {
                                <td>
                                    <a href="../Clan/ClanInvite" class="btn btn-primary">Пригласить в клан</a>
                                </td>
                                <td>
                                    <a href="../Clan/ClanDelete?id=@ViewBag.Clan.ClanId" class="btn btn-danger">Удалить клан</a>
                                </td>
                            }
                            else
                            {
                                <td>
                                    <a href="../Clan/ClanLeave" class="btn btn-danger">Покинуть клан</a>
                                </td>
                            }
                        </tr>
                    </tbody>
                </table>
            }
        </div>
    </div>
    <hr />
    <h4>Экипировка:</h4>
    <h6>Общий показатель брони: @(ViewBag.Character.Head.Armor+ViewBag.Character.Body.Armor+ViewBag.Character.Leg.Armor)</h6>
    <div class="row">
        <div class="card col-lg-3 shadow">
            <img class="img-thumbnail mt-3" src="../Content/images/@(ViewBag.Character.Head.ItemName).png" alt="Card image cap">
            <div class="card-body">
                <h4 class="card-title col-form-label-lg pt-0">@ViewBag.Character.Head.ItemName</h4>
                <p class="card-text">
                    Показатель брони: @ViewBag.Character.Head.Armor
                </p>
                <a href="../Home/EditHead" class="btn btn-primary">Изменить</a>
            </div>
        </div>
        <div class="card col-lg-3 shadow">
            <img class="img-thumbnail mt-3" src="../Content/images/@(ViewBag.Character.Body.ItemName).png" alt="Card image cap">
