@model IEnumerable<AccountManager.Models.Player>


@{
    ViewBag.Title = "ClanInfo";
}

<h2>Информация о клане</h2>

@using (Html.BeginForm())
{
    <h4>Рейтинг клана: @ViewBag.Clan.ClanRaiting</h4>
    <div class="row text-center">
        <div class="col-lg-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Имя</th>
                        <th scope="col">Рейтинг</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Username</td>
                            <td>@item.Character.Score</td>
                            @if (ViewBag.isLeader && item.Username != User.Identity.Name)
                            {
                                <td><a href="../Clan/ClanExpel?id=@item.Id&clanId=@ViewBag.Clan.ClanId" class="btn btn-danger">Исключить</a></td>
                            }
                            else
                            {
                                <td></td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
