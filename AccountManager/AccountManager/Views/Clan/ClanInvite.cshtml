@model AccountManager.Models.ClanInviteModel

@{
    ViewBag.Title = "ClanInvite";
}

<h2>Приглашение в клан</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()<div class="form-horizontal">
        <h4>Введите никнейм игрока</h4>
        <hr />
        @if (ViewBag.Message != null) 
        { 
            <div class="alert alert-success" role="alert">
                @ViewBag.Message
            </div>
        }
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Имя:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Пригласить" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вернуться на главную", "../")
</div>
